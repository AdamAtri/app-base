<Page navigatingTo="onNavigatingTo"
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar>
        <NavigationButton text="Go Back" android.systemIcon="ic_menu_back" tap="onNavBtnTap"/>
        <Label text="VoiceThread Details"></Label>
    </ActionBar>

    <ScrollView>
        <StackLayout>
            <GridLayout class=" author-box" columns="auto,*">
                <Label row="0" col="1" text="{{authorName}}" class="author"/>
                <Image row="0" col="0" src="{{authorAvatarUrl}}" class="avatar" />
            </GridLayout>
            <Label text="{{title}}" class="title" textWrap="true"/>
            <Label text="{{description}}" class="description" textWrap="true"/>
            <Label text="{{'Tags: '+ tags}}" class="tags"/>
            <StackLayout class="hr"/>
            <Label text="{{'Tap to open ' + shareURL + ' in your browser'}}" class="link" textWrap="true"  tap="openThread"/>            
            <Image src="{{squareURL}}" class="image" tap="openThread"/>
        </StackLayout>
    </ScrollView>



</Page>
